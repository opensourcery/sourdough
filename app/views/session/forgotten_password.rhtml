<% @page_title = "Reset your password"[] %>

<h3><%= @page_title %></h3>

<% form_for(:session, :url => reset_password_session_path, :html => { :method => :put }) do |f| %>
  <dl>
   <dt><label for="email">Email Address</label></dt>
   <dd><%= text_field_tag 'email' %></dd>

   <p><%= submit_tag "Reset Password"[] %></p>
<% end %>
