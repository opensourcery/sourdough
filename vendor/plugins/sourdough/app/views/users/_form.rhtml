  <dt><%= label :user, :login, 'Choose a login' %></dt>
  <dd><%= form.text_field :login, :class => 'autofocus' %></dd>

  <dt><%= label :user, :email, 'Your email' %></dt>
  <dd><%= form.text_field :email %></dd>

  <dt><%= label :user, :password, 'Choose a password' %></dt>
  <dd><%= form.password_field :password %></dd>

  <dt><%= label :user, :confirm_password %></dt>
  <dd><%= form.password_field :password_confirmation %></dd>

  <%= render :partial => 'optional_form_fields', :locals => { :form => form }  %>

  <dt><%= label :user, :time_zone, 'Your time zone' %></dt>
  <dd><%= form.time_zone_select :time_zone, TimeZone.us_zones %></dd>
