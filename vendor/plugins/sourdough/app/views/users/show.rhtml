<% @page_title = @user.login %>

<% administration_area_only do %>
  <%= link_to '&#171; Return to User Management', admin_users_path %>
<% end %>

<h3>
  <%= h @page_title %>
    <% can_edit? do %><%= link_to '[ edit ]', edit_user_path(@user), :class => 'edit' %><% end %>
</h3>
<p><%= avatar_for(@user) %></p>

<dl class="inline">
  <dt>Email:</dt>
  <dd><%= link_to @user.email, 'mailto:' + @user.email %></dd>

  <%= render :partial => 'optional_show_fields' %>

</dl>

