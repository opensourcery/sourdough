<% @section_title = 'photo' %>

<% administration_area_only do %>
  <%= link_to '&#171; Return to User Management', admin_users_path %>
<% end %>

<%= render :partial => 'users/header' %>

<%= sourdough_error_messages_for :photo %>

<div class="form_container photo column span-14 append-5 prepend-5 last">
  <% form_for(:photo, :url => user_photos_path(@user), :html => { :multipart => true }) do |f| -%>

    <% if @user.photo && @photo.errors.blank? %>
      <div class="user_photo">
        <%= avatar_for(@user) %>
        <p class="delete"><%= link_to 'user_delete_photo'[], user_photos_path(@user), :confirm => 'dialog_binary_confirmation'[], :method => :delete %></p>
      </div>
    <% end %>

    <dl>
      <dt><%= f.label :uploaded_data, 'Upload a new photo to replace this one:' %></dt>
      <dd><%= f.file_field :uploaded_data %></dd>
    </dl>
    <p><%= submit_tag "user_upload_new_photo_submit"[], :class => "submit" %></p>

  <% end %>
</div>
