<% @section_title = 'photo' %>

<% administration_area_only do %>
  <%= link_to '&#171; Return to User Management', admin_users_path %>
<% end %>

<%= render :partial => 'users/header' %>

<%= sourdough_error_messages_for :user %>

<div class="form_container photo column span-14 append-5 prepend-5 last">
  <% form_for(:user, :url => user_photos_path(@user), :html => { :multipart => true }) do |f| -%>

    <% if @user.image %>
      <div class="user_photo">
        <%= avatar_for(@user) %>
        <p class="delete"><%= link_to 'Delete this photo', user_photos_path(@user), :confirm => 'Are you sure?', :method => :delete %></p>
      </div>
    <% end %>

    <dl>
      <dt><%= f.label :image, 'Upload a new photo to replace this one:' %></dt>
      <dd><%= file_column_field "user", "image" %></dd>
    </dl>

    <p><%= submit_tag "Upload", :class => "submit" %></p>

  <% end %>
</div>
